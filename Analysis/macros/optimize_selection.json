				],
        "variables"          : [["minR9",[0,1.2,0.01],0]
				],
        "_selectioncuts"      : [["-ebHoE",[-0.1,0.01,0.0005],-0.05],
				["-eeHoE",[-0.1,0.01,0.0005],-0.05]
				 ],
        "selectioncuts"      : [
				["-ebChIso",[-10,0.01,0.1],-5],
				["-eeChIso",[-10,0.01,0.1],-5],
				["-ebPhoIso",[-10,0.01,0.1],-5],
				["-eePhoIso",[-10,0.01,0.1],-5]
				],
